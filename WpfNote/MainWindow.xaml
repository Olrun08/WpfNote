<Window x:Class="WpfNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfNote"
        xmlns:model="clr-namespace:WpfNote.Model"
        mc:Ignorable="d"
        Title="WpfBasics" Height="450" Width="800">
    <Window.DataContext>
        <model:ModelView />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="ROOTemplate" DataType="{x:Type local:Model.Model}">
            <TextBlock Text="{Binding Name}" />
        </DataTemplate>
        <ItemsPanelTemplate x:Key="PanelTemplate">
            <WrapPanel Orientation="Vertical" IsItemsHost="False" />
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
        <Button Content="ADD" Command="{Binding AddCommand}" CommandParameter="{Binding}" />
        <ListBox Name="listBoxROOT" Grid.Row="1"
                 ItemsSource="{Binding ROOT}"
                 ItemTemplate="{StaticResource ROOTemplate}"
                 ItemsPanel="{StaticResource PanelTemplate}" />
    </Grid>
</Window>